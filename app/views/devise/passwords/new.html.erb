<div class="register">
  <div class="col-md-5 col-md-offset-4" style="margin-top:50px">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%#= devise_error_messages! %>
  <%= f.label :Email, "Please input email!" %> 
  <div class="input-group">
    <%= f.email_field :email, class: 'form-control', placeholder: 'Email', autofocus: true %>
    <span class="input-group-addon">
      <span class="glyphicon glyphicon-user"></span>
    </span>
  </div>

  <div class="actions checkbox col-md-offset-4">
    <%= f.submit "Confirm", class: 'btn btn-default' %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
</div>
</div>